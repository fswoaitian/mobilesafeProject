<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_blacklist_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <TextView
        style="@style/TextTitleStyle"
        android:text="添加黑名单"
        android:id="@+id/tv_blacklist_edit_title"/>
    <TextView
        style="@style/TextContentStyle"
        android:text="电话号码"/>
    <EditText
        android:id="@+id/et_blacklist_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_edit_et_blacklist"
        android:inputType="phone"/>
    <TextView
        style="@style/TextContentStyle"
        android:text="拦截类型"/>
    <RadioGroup
        android:id="@+id/rg_blacklist_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
        <RadioButton
            android:id="@+id/rb_blacklist_type_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电话"
            android:textColor="#000"/>
        <RadioButton
            android:id="@+id/rb_blacklist_type_sms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="短信"
            android:textColor="#000"/>
        <RadioButton
            android:id="@+id/rb_blacklist_type_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全部"
            android:textColor="#000"/>
    </RadioGroup>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_blacklist_save"
                android:text="保存"
                android:background="@drawable/selector_btn_ok_bg"/>
            <Button
                android:background="@drawable/selector_btn_cancel_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_blacklist_cancel"
                android:text="取消"
                android:layout_marginLeft="25dp"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
